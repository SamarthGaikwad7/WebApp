pipeline {
    agent any  // Runs on any available agent

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/YourUsername/YourRepo.git' // Update with your repo URL
            }
        }

        stage('Build') {
            steps {
                script {
                    def mvnHome = tool name: 'Maven', type: 'maven'
                    env.PATH = "${mvnHome}/bin:${env.PATH}"
                }
                sh 'mvn clean package'  // Build the project
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'  // Run tests
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'target/*.war', fingerprint: true  // Store the built WAR file
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'  // Deployment steps go here
            }
        }
    }
}
